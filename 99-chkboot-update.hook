[Trigger]
Type = File
Operation = Install
Operation = Upgrade
Target = usr/lib/modules/*/vmlinuz
Target = usr/lib/initcpio/*

[Trigger]
Type = Package
Operation = Install
Operation = Upgrade
Operation = Remove
Target = systemd
Target = intel-ucode
Target = amd-ucode

[Action]
Depends = chkboot
Depends = coreutils
Description = Updating chkboot hashes...
When = PostTransaction
Exec = /usr/bin/sh -c '/usr/bin/chkboot --update'
